@model IEnumerable<WebApplication3.Models.Product>

@{
    ViewBag.Title = "Index";
}


@if (TempData["Success"] != null)
{
    @Html.Raw(TempData["Success"])
}

<h2>Index</h2>

<p>
    @Html.ActionLink("AddProduct", "AddProduct", "Test", new { area = "" }, new { @class = "btn btn-primary" })

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.pname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pcat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.pname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pcat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteProduct", new { id = item.Id },new {onclick="return confirm('are you sure')"})
            </td>
        </tr>
    }

</table>
